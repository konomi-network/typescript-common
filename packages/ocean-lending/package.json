{
  "name": "@konomi-network/client",
  "version": "0.0.1",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "description": "Konomi Protocol Client",
  "author": "Konomi Network",
  "private": false,
  "homepage": "https://github.com/konomi-network/typescript-common",
  "license": "MIT",
  "keywords": [
    "KONO",
    "konomi",
    "client"
  ],
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/konomi-network/typescript-common.git"
  },
  "bugs": {
    "url": "https://github.com/konomi-network/typescript-common/issues"
  },
  "scripts": {
    "clean": "rimraf dist && rimraf tsconfig.tsbuildinfo",
    "prepack": "yarn build",
    "build": "tsc --build",
    "test": "jest",
    "lint": "eslint \"./**/*.{ts,tsx}\" --max-warnings=0"
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "@types/node": "^16.10.1",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "electron": "^15.1.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.2.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "is-ci": "^3.0.0",
    "jest": "^27.2.4",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.4",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "web3": "^1.5.2",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src/tests",
    "testRegex": ".ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "testTimeout": 95000
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint"
    }
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "npx eslint --fix"
    ]
  }
}
