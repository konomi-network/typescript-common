  "author": "Konomi Network",
  "private": false,
  "homepage": "https://github.com/konomi-network/typescript-common",
  "license": "MIT",
  "keywords": [
    "KONO",
    "konomi",
    "client"
  ],
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/konomi-network/typescript-common.git"
  },
  "bugs": {
    "url": "https://github.com/konomi-network/typescript-common/issues"
  },
  "scripts": {
    "clean": "rimraf dist && rimraf tsconfig.tsbuildinfo",
    "prepack": "yarn build",
    "build": "tsc --build tsconfig.prod.json",
    "test": "jest",
    "lint": "eslint \"./**/*.{ts,tsx}\" --max-warnings=0",
    "test-specific": "mocha -g"
  },
  "devDependencies": {
    "@types/chai": "^4.3.0",
    "@types/jest": "^27.4.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^16.10.1",
    "chai": "^4.3.6",
    "husky": "^7.0.4",
    "is-ci": "^3.0.0",
    "jest": "^27.2.4",
    "lerna": "^4.0.0",
    "lint-staged": "^12.3.4",
    "mocha": "^9.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.7.0"
  },
  "dependencies": {
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  },
  "peerDependencies": {
    "web3": "^1.7.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "integration-tests",
    "testRegex": ".ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "testTimeout": 95000
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint"
    }
  },
  "lint-staged": {
    "./**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write",
      "npx eslint --fix"
    ]
  },
  "gitHead": "7f8d6ca5698d1b8ace0d337677f37f6689930124"
