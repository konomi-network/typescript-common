{
	"name": "@konomi-network/client",
	"version": "0.5.4",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"description": "Konomi Protocol Client",
	"author": "Konomi Network",
	"private": false,
	"homepage": "https://github.com/konomi-network/typescript-common",
	"license": "MIT",
	"keywords": [
		"KONO",
		"konomi",
		"client"
	],
	"files": [
		"dist"
	],
	"publishConfig": {
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/konomi-network/typescript-common.git"
	},
	"bugs": {
		"url": "https://github.com/konomi-network/typescript-common/issues"
	},
	"scripts": {
		"clean": "rimraf dist && rimraf tsconfig.tsbuildinfo",
		"prepack": "yarn build",
		"build": "tsc --build",
		"test": "jest",
		"lint": "eslint \"./**/*.{ts,tsx}\" --max-warnings=0"
	},
	"devDependencies": {
		"@types/jest": "^27.4.0",
		"@types/node": "^16.10.1",
		"husky": "^7.0.4",
		"is-ci": "^3.0.0",
		"jest": "^27.2.4",
		"lerna": "^4.0.0",
		"lint-staged": "^12.3.4",
		"rimraf": "^3.0.2",
		"ts-jest": "^27.0.5"
	},
	"dependencies": {
		"winston": "^3.3.3",
		"winston-daily-rotate-file": "^4.5.5"
	},
	"peerDependencies": {
		"web3": "^1.7.1"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": "src/tests",
		"testRegex": ".ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"coverageDirectory": "./coverage",
		"testEnvironment": "node",
		"testTimeout": 95000
	},
	"husky": {
		"hooks": {
			"pre-commit": "npx lint"
		}
	},
	"lint-staged": {
		"./**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
			"prettier --write",
			"npx eslint --fix"
		]
	}
}
