	"devDependencies": {
		"@konomi-network/eslint-config-konomi": "^1.0.2",
		"chai": "^4.3.6",
		"eslint": "^7.32.0",
		"is-ci": "^3.0.0",
		"lerna": "^4.0.0",
		"mocha": "^9.2.0",
		"rimraf": "^3.0.2",
		"ts-jest": "^27.0.5",
		"typescript": "^4.4.3"
	}
}